<!DOCTYPE html>
<html lang="de">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>üèÉ Benutzerverwaltung</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <%- include('partials/nav', { displayName, humor: true, isAdmin }) %>

  <div class="admin-container">
    <h1>Benutzerverwaltung</h1>

    <div class="users-table-container">
      <table class="users-table">
        <thead>
          <tr>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Anzeigename</th>
            <th id="table-header-role">Rolle</th>
            <th>Humor</th>
            <th>Buchungen</th>
            <th>Kommende Buchungen</th>
            <th>Abgeschl. Trainings</th>
            <th>Nicht finalisiert</th>
            <th>Aktionen</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr class="user-row" data-user-id="<%= user.id %>">
            <td><%= user.firstName %></td>
            <td><%= user.lastName %></td>
            <td><%= user.displayName %></td>
            <td id="table-data-role">
              <select class="role-dropdown" onchange="updateUserRole(<%= user.id %>, this.value)">
                <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>Benutzer</option>
                <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                <option value="super-admin" <%= user.role === 'super-admin' ? 'selected' : '' %>>Super-Admin</option>
              </select>
            </td>
            <td>
              <select class="humor-dropdown" onchange="updateUserHumor(<%= user.id %>, this.value)">
                <option value="false" <%= user.humor === false ? 'selected' : '' %>>Nein</option>
                <option value="true" <%= user.humor === true ? 'selected' : '' %>>Ja</option>
              </select>
            </td>
            <td class="text-center"><%= user.totalBookings %></td>
            <td class="text-center"><%= user.upcomingBookings %></td>
            <td class="text-center"><%= user.completedTrainings %></td>
            <td class="text-center"><%= user.notFinalizedTrainings %></td>
            <td>
              <div class="action-buttons">
                <button class="btn btn-small btn-primary" onclick="editUser(<%= user.id %>, '<%= user.firstName %>', '<%= user.lastName %>', '<%= user.displayName %>', '<%= user.email %>', <%= user.humor %>, '<%= user.role %>')">Bearbeiten</button>
                <button class="btn btn-small btn-danger" onclick="deleteUser(<%= user.id %>, '<%= user.displayName %>')">L√∂schen</button>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <div id="confirmModal" class="modal">
    <div class="modal-content">
      <h2>Best√§tigung</h2>
      <p id="confirmMessage"></p>
      <div class="button-group">
        <button class="btn btn-danger" id="confirmBtn">L√∂schen</button>
        <button class="btn btn-secondary" onclick="closeConfirmModal()">Abbrechen</button>
      </div>
    </div>
  </div>

  <div id="editModal" class="modal">
    <div class="modal-content">
      <h2>Benutzer bearbeiten</h2>
      <form id="editUserForm">
        <div class="form-group">
          <label for="editFirstName">Vorname</label>
          <input type="text" id="editFirstName" name="firstName" required>
        </div>
        <div class="form-group">
          <label for="editLastName">Nachname</label>
          <input type="text" id="editLastName" name="lastName" required>
        </div>
        <div class="form-group">
          <label for="editDisplayName">Anzeigename</label>
          <input type="text" id="editDisplayName" name="displayName" required>
        </div>
        <div class="form-group">
          <label for="editEmail">E-Mail-Adresse</label>
          <input type="email" id="editEmail" name="email" required>
        </div>
        <div class="form-group">
          <label for="editPassword">Passwort (leer lassen zum Beibehalten)</label>
          <input type="password" id="editPassword" name="password">
        </div>
        <div class="form-group">
          <label for="editHumor">Humor</label>
          <select id="editHumor" name="humor" required>
            <option value="false">Nein</option>
            <option value="true">Ja</option>
          </select>
        </div>
        <div class="form-group">
          <label for="editRole">Rolle</label>
          <select id="editRole" name="role" required>
            <option value="user">Benutzer</option>
            <option value="admin">Admin</option>
            <option value="super-admin">Super-Admin</option>
          </select>
        </div>
        <div class="button-group">
          <button type="button" class="btn btn-primary" onclick="saveUserChanges()">Speichern</button>
          <button type="button" class="btn btn-secondary" onclick="closeEditModal()">Abbrechen</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/admin-users.js"></script>
</body>

</html>
